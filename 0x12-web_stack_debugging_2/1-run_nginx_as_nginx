#!/usr/bin/env bash
# Fixes a web server to run Nginx as the nginx user listening on port 8080.

# Update nginx configuration to run as the nginx user
sudo sed -i "s/#user www-data/user nginx/" /etc/nginx/nginx.conf

# Update default site configuration to listen on port 8080
sudo sed -i "s/listen 80;/listen 8080;/" /etc/nginx/sites-available/default
sudo sed -i "s/listen \[::\]:80;/listen \[::\]:8080;/" /etc/nginx/sites-available/default

# Ensure nginx configuration file has correct permissions
sudo chmod 644 /etc/nginx/nginx.conf

# Stop Apache if it is running
sudo pkill apache2

# Restart Nginx service
sudo systemctl restart nginx
