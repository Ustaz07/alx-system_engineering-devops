#!/usr/bin/env bash

# Check if script is run as root
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run this script as root"
    exit 1
fi

# Backup the original hosts file
cp /etc/hosts /etc/hosts.bak

# Modify the hosts file to change localhost IP and add facebook.com entry
sed -i 's/127\.0\.0\.1/127.0.0.2/' /etc/hosts
echo '8.8.8.8 facebook.com' >> /etc/hosts

# Remove the temporary backup file
rm -f /etc/hosts.bak

echo "IP addresses updated:"
echo "localhost now resolves to 127.0.0.2"
echo "facebook.com now resolves to 8.8.8.8"
